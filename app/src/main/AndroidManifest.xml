<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team.project.wat_show">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login_Signup.Login"
            android:theme="@style/singUp">

        </activity>


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 유저 페이지 -->
        <activity
            android:name=".userPage.userPage_main"
            android:theme="@style/nonTitleTheme" />
        <!-- 충전 환전 페이지 -->
        <activity
            android:name=".chargeUp_exchange.chargeUp_exchange_main"
            android:theme="@style/nonTitleTheme" />

        <!-- 방송 페이지 -->
        <activity
            android:name=".broadCast.broadCast_main"
            android:theme="@style/nonTitleTheme" />
        <activity android:name=".appSetting.appSetting_main" />

        <activity
            android:name=".Login_Signup.Signup"
            android:theme="@style/singUp" />
        <activity
            android:name=".Login_Signup.Signup2"
            android:theme="@style/singUp" />
        <activity android:name=".serviceCenter.serviceCenter_main" />
        <activity
            android:name=".upload_Videos.upload_videos_main"
            android:theme="@style/nonTitleTheme" />
        <activity android:name=".upload_Videos.video_upload_page"></activity>
        <activity android:name=".serviceCenter.serviceCenter_main" />
        <activity android:name=".Login_Signup.find_id_pw">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity android:name=".authentication.userAuthentication"></activity>
    </application>

</manifest>